<van-cell title="摊位数量" value="{{max_number}}" />

<van-cell title="区域行数">
	<van-stepper value="{{ row }}" id="row" bind:change="onChangeRow" />
</van-cell>

<van-cell title="区域列数">
	<van-stepper value="{{ column }}" id="column" bind:change="onChangeCol" />
</van-cell>

<!-- 要求1:此区域可以放缩 -->
<!-- 要求2:此区域座位不能超出范围过多 -->

<movable-area scale-area style="height:{{areaHeight}}px; width:{{areaWidth}}px">
	<movable-view direction="all" out-of-bounds inertia scale>
		<view>
			<!-- 这个 view 组件会根据具体情况决定图片的大小 -->
			<view wx:for="{{seatList}}" wx:key="id" wx:for-index="index" id="{{item.row}}-{{item.col}}" style="left:{{(item.gcol - 1) * seatScaleHeight}}px; top:{{(item.grow - 1) * seatScaleHeight}}px; width:{{seatScaleHeight}}px; height:{{seatScaleHeight}}px">
				<image src="{{item.icon}}"></image>
			</view>
		</view>
	</movable-view>
</movable-area>

