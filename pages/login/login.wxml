<swiper autoplay circular style="height:{{windowHeight}}; width:{{windowWidth}}">
	<block wx:for="{{background}}">
		<swiper-item>
			<image src="{{item}}" style="height:{{windowHeight}}; width:{{windowWidth}}"></image>
		</swiper-item>
	</block>

	<view class="btn">
		<van-button type="primary" bind:click="userLogin">用户登录</van-button>
	</view>
	<view class="btn">
		<van-button type="primary" bind:click="adminLogin">管理员登录</van-button>
	</view>
	<view class="btn">
		<van-button type="primary" size="small" bind:click="adminApply">管理员申请（内测版）</van-button>
	</view>
</swiper>
