.info {
  width: 100%;
  height: 80rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  padding: 30rpx 30rpx;
  position: relative;
}

.stallName {
  font-size: 35rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.stallTime {
  color: #aaa;
  font-size: 27rpx;
}

.seatDemos {
  color: #aaa;
  background: #fff;
  position: relative;
  margin: 0 auto;
  width: 80%;
  box-sizing: border-box;
  font-size: 25rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.seatDemo image {
  width: 45rpx;
  height: 45rpx;
  display: flex;
  flex-direction: row;
}

.seatDemoItem {
  white-space: nowrap;
  width: 45rpx;
  display: block;
}

.movableOne {
  box-sizing: border-box;
  padding: 100rpx 60rpx;
  color: #fff;
}

.seatArea {
  margin: 0 auto;
  font-size: 10rpx;
  position: relative;
}

.alignLine {
  position: absolute;
  left: 50%;
  height: 100%;
  border-left: 1px dashed #aaa;
  transform: translateX(-100%);
}

.seatTap {
  position: absolute;
}

/*
*选座区域普通座位的图片样式
*/

.normal {
  position: relative;
  /* margin: 10rpx; */
  width: 100%;
  height: 100%;
}

.selectSeatInfo {
  background: #F8F8FF;
  position: fixed;
  bottom: 100rpx;
  height: 80rpx;
  width: 100%;
  padding: 10rpx 0;
}

.scrollSeat {
  height: 90rpx;
  white-space: nowrap;
}

.scrollItem {
  border: 1rpx solid #bbb;
  border-radius: 10rpx;
  width: 180rpx;
  display: inline-block;
  margin-left: 20rpx;
  position: relative;
  height: 70rpx;
  background: #fff;
}

.scrollItem image {
  position: absolute;
  z-index: 2;
  width: 30rpx;
  height: 30rpx;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}

/*
*每块用户选中的座位详情上方文字
*/

.scrollTextTop {
  color: #555;
  text-indent: 30rpx;
  line-height: 25rpx;
  font-size: 35rpx;
  height: 30rpx;
  margin-top: 20rpx;
}

.orderComfirm {
  background: #F8F8FF;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  line-height: 100rpx;
  z-index: 3;
}


/* 有关滑块 */
.zy-slider {
  margin: 60rpx;
}
.top {
  text-align: center;
}

.des {
  text-align: center;
}

.zy-slider {
  position: relative;
  margin: 60rpx;
}

