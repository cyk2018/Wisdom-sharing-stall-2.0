.control-btn {
  position: absolute;
  height: 40px;
  width: 40px;
  z-index: 99;
  background: #FFF;
  line-height: 35px;
  font-size: 30px;
  text-align: center;
  border-radius: 4px;
  right: 10px;
}

.control-btn-increase {
  bottom: 122px;
}

.control-btn-decrease {
  bottom: 72px;
}

.focus-btn {
  position: absolute;
  height: 40px;
  width: 40px;
  z-index: 99;
  background: #FFF;
  line-height: 35px;
  border-radius: 4px;
  left: 10px;
}

.focus-btn-decrease {
  bottom: 72px;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 200px;
  height: 120px;
}

.btn {
  margin-left: 5px;
  margin-right: 5px;
}

.customCallout {
  box-sizing: border-box;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 10px;
  width: 100px;
  height: 40px;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}


.content {
  text-align: center;
  vertical-align: center;
  font-size: 11px;
  word-break: break-all;
  word-wrap:break-word;
  white-space:pre-line;
}